<div class="container">
  <h2>Upload article</h2>

  <%= form_for(@article) do |f| %>
    <%= f.label :title, :class => 'my-text'%>
    <%= f.text_field :title, :class => 'form-control form-control-plaintext' %>
    <%= f.label :content, :class => 'my-text'%>
    <%= f.text_field :content, :class => ' form-control form-control-plaintext' %>
    <%= f.submit 'Upload', :class => 'btn-medium' %>
  <% end %>
</div>
